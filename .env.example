# NVIDIA Cloud Platform - Environment Variables
# Copy this file to .env and update values as needed

# ============================================================================
# Database Configuration
# ============================================================================

# Orchestrator Database
ORCH_POSTGRES_DB=orchestrator_db
ORCH_POSTGRES_USER=orchestrator_user
ORCH_POSTGRES_PASSWORD=orchestrator_password
ORCH_POSTGRES_PORT=5432

# Auth Service Database
AUTH_POSTGRES_DB=auth_db
AUTH_POSTGRES_USER=auth_user
AUTH_POSTGRES_PASSWORD=auth_password
AUTH_POSTGRES_PORT=5432

# Billing Service Database
BILLING_POSTGRES_DB=billing_db
BILLING_POSTGRES_USER=billing_user
BILLING_POSTGRES_PASSWORD=billing_password
BILLING_POSTGRES_PORT=5432

# ============================================================================
# JWT Configuration
# ============================================================================
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# Service URLs and Ports
# ============================================================================
ORCHESTRATOR_URL=http://orchestrator:3003
LOAD_BALANCER_URL=http://load-balancer:3004
SERVICE_DISCOVERY_URL=http://service-discovery:3006
API_GATEWAY_PORT=8080
UI_PORT=3000
UI_EXTERNAL_PORT=3000
BILLING_PORT=3007

# ============================================================================
# Kafka Configuration
# ============================================================================
KAFKA_BROKER_URL=kafka:9092
KAFKA_UI_PORT=8081

# Kafka Consumer Groups
LB_GROUP=load-balancer-group
SD_GROUP=service-discovery-group
BILLING_GROUP=billing-group

# ============================================================================
# Consul Configuration
# ============================================================================
CONSUL_PORT=8500

# ============================================================================
# Docker Configuration
# ============================================================================
DOCKER_NETWORK=nvidia-project_nvidia-network

# ============================================================================
# Service Names
# ============================================================================
AUTH_SERVICE_NAME=auth-service
BILLING_SERVICE_NAME=billing-service

# ============================================================================
# Node.js Environment
# ============================================================================
NODE_ENV=development
